<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.CompleteDataFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/registrasi_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registrasi"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_button" />

        <TextView
            android:id="@+id/email_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/email_address"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/registrasi_title"
            app:layout_constraintStart_toStartOf="@id/registrasi_title"
            app:layout_constraintEnd_toEndOf="@id/registrasi_title"/>

        <EditText
            android:id="@+id/email_input"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:background="@drawable/shape_edit_text"
            app:layout_constraintTop_toBottomOf="@id/email_title"
            app:layout_constraintStart_toStartOf="@id/email_title"
            app:layout_constraintEnd_toEndOf="@id/email_title"/>

        <TextView
            android:id="@+id/nama_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/nama_lengkap"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/email_input"
            app:layout_constraintStart_toStartOf="@id/email_input"
            app:layout_constraintEnd_toEndOf="@id/email_input"/>

        <EditText
            android:id="@+id/nama_input"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:background="@drawable/shape_edit_text"
            app:layout_constraintTop_toBottomOf="@id/nama_title"
            app:layout_constraintStart_toStartOf="@id/nama_title"
            app:layout_constraintEnd_toEndOf="@id/nama_title"/>

        <TextView
            android:id="@+id/asal_kampus_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/asal_kampus"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/nama_input"
            app:layout_constraintStart_toStartOf="@id/nama_input"
            app:layout_constraintEnd_toEndOf="@id/nama_input"/>

        <EditText
            android:id="@+id/asal_kampus_input"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:background="@drawable/shape_edit_text"
            app:layout_constraintTop_toBottomOf="@id/asal_kampus_title"
            app:layout_constraintStart_toStartOf="@id/asal_kampus_title"
            app:layout_constraintEnd_toEndOf="@id/asal_kampus_title"/>

        <TextView
            android:id="@+id/nim_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/nim"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/asal_kampus_input"
            app:layout_constraintStart_toStartOf="@id/asal_kampus_input"
            app:layout_constraintEnd_toEndOf="@id/asal_kampus_input"/>

        <EditText
            android:id="@+id/nim_input"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:background="@drawable/shape_edit_text"
            app:layout_constraintTop_toBottomOf="@id/nim_title"
            app:layout_constraintStart_toStartOf="@id/nim_title"
            app:layout_constraintEnd_toEndOf="@id/nim_title"/>

        <TextView
            android:id="@+id/tanggal_lahir_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tanggal_lahir"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/nim_input"
            app:layout_constraintStart_toStartOf="@id/nim_input"
            app:layout_constraintEnd_toEndOf="@id/nim_input"/>

        <EditText
            android:id="@+id/tanggal_lahir_input"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:inputType="date"
            android:background="@drawable/shape_edit_text"
            android:focusableInTouchMode="false"
            app:layout_constraintTop_toBottomOf="@id/tanggal_lahir_title"
            app:layout_constraintStart_toStartOf="@id/tanggal_lahir_title"
            app:layout_constraintEnd_toEndOf="@id/tanggal_lahir_title"/>

        <TextView
            android:id="@+id/alamat_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/alamat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tanggal_lahir_input"
            app:layout_constraintStart_toStartOf="@id/tanggal_lahir_input"
            app:layout_constraintEnd_toEndOf="@id/tanggal_lahir_input"/>

        <EditText
            android:id="@+id/alamat_input"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:background="@drawable/shape_edit_text"
            app:layout_constraintTop_toBottomOf="@id/alamat_title"
            app:layout_constraintStart_toStartOf="@id/alamat_title"
            app:layout_constraintEnd_toEndOf="@id/alamat_title"/>

        <TextView
            android:id="@+id/no_handpone_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/no_handpone"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/alamat_input"
            app:layout_constraintStart_toStartOf="@id/alamat_input"
            app:layout_constraintEnd_toEndOf="@id/alamat_input"/>

        <EditText
            android:id="@+id/no_handpone_input"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:background="@drawable/shape_edit_text"
            app:layout_constraintTop_toBottomOf="@id/no_handpone_title"
            app:layout_constraintStart_toStartOf="@id/no_handpone_title"
            app:layout_constraintEnd_toEndOf="@id/no_handpone_title"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_registrasi"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/primary"
            android:text="@string/registrasi"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@id/no_handpone_input"
            app:layout_constraintStart_toStartOf="@id/no_handpone_input"
            app:layout_constraintTop_toBottomOf="@id/no_handpone_input" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

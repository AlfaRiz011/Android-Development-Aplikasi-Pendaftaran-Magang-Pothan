<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/item_verif_docs"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/nama_pendaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nama_lengkap"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/dokumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dokumen"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            android:paddingVertical="2dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/shape_divisi"
            android:backgroundTint="@color/primary"
            app:layout_constraintTop_toBottomOf="@id/nama_pendaftar"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/icon_email"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_email_white"
            android:contentDescription="@string/img_view_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dokumen"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/example_email"
            android:textSize="17sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/whiteCream"
            app:layout_constraintTop_toTopOf="@id/icon_email"
            app:layout_constraintBottom_toBottomOf="@id/icon_email"
            app:layout_constraintStart_toEndOf="@id/icon_email"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/icon_phone_number"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_phone"
            android:contentDescription="@string/img_view_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email"
            app:tint="@color/whiteCream" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/example_phone"
            android:textSize="17sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/whiteCream"
            app:layout_constraintTop_toTopOf="@id/icon_phone_number"
            app:layout_constraintBottom_toBottomOf="@id/icon_phone_number"
            app:layout_constraintStart_toEndOf="@id/icon_phone_number"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/whiteCream"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/lihat_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/lihat_detail"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/whiteCream"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

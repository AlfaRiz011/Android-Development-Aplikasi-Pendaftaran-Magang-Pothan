<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ui.fragment.ProfileFragment">

    <!-- Background -->
    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:background="@drawable/shape_background_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Email -->
    <TextView
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/example_email"
        android:textSize="17sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/blackTransparent"
        app:layout_constraintTop_toTopOf="@id/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- No Telepon -->
    <TextView
        android:id="@+id/no_telpon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/example_phone"
        android:textSize="17sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/blackTransparent"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/blackTransparent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/no_telpon"
        app:layout_constraintStart_toStartOf="@id/email"
        app:layout_constraintEnd_toEndOf="@id/email"/>

    <!-- Nama -->
    <ImageView
        android:id="@+id/icon_nama"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/icon_name"
        android:contentDescription="@string/img_view_desc"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nama_lengkap"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/icon_nama"
        app:layout_constraintBottom_toBottomOf="@id/icon_nama"
        app:layout_constraintStart_toEndOf="@id/icon_nama"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/blackTransparent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/icon_nama"
        app:layout_constraintStart_toStartOf="@id/email"
        app:layout_constraintEnd_toEndOf="@id/email"/>

    <!-- Asal Kampus -->
    <ImageView
        android:id="@+id/icon_asal_kampus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/icon_univ"
        android:contentDescription="@string/img_view_desc"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/asal_kampus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/asal_kampus"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/icon_asal_kampus"
        app:layout_constraintBottom_toBottomOf="@id/icon_asal_kampus"
        app:layout_constraintStart_toEndOf="@id/icon_asal_kampus"/>

    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/blackTransparent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/icon_asal_kampus"
        app:layout_constraintStart_toStartOf="@id/email"
        app:layout_constraintEnd_toEndOf="@id/email"/>

    <!-- Tanggal Lahir -->
    <ImageView
        android:id="@+id/icon_tanggal_lahir"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/icon_date"
        android:contentDescription="@string/img_view_desc"
        app:layout_constraintTop_toBottomOf="@id/divider3"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tanggal_lahir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tanggal_lahir"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/icon_tanggal_lahir"
        app:layout_constraintBottom_toBottomOf="@id/icon_tanggal_lahir"
        app:layout_constraintStart_toEndOf="@id/icon_tanggal_lahir"/>

    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/blackTransparent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/icon_tanggal_lahir"
        app:layout_constraintStart_toStartOf="@id/email"
        app:layout_constraintEnd_toEndOf="@id/email"/>

    <!-- NIM -->
    <ImageView
        android:id="@+id/icon_nim"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/icon_nim"
        android:contentDescription="@string/img_view_desc"
        app:layout_constraintTop_toBottomOf="@id/divider4"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nim"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/icon_nim"
        app:layout_constraintBottom_toBottomOf="@id/icon_nim"
        app:layout_constraintStart_toEndOf="@id/icon_nim"/>

    <View
        android:id="@+id/divider5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/blackTransparent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/icon_nim"
        app:layout_constraintStart_toStartOf="@id/email"
        app:layout_constraintEnd_toEndOf="@id/email"/>

    <!-- Alamat -->
    <ImageView
        android:id="@+id/icon_alamat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/icon_location"
        android:contentDescription="@string/img_view_desc"
        app:layout_constraintTop_toBottomOf="@id/divider5"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alamat"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/icon_alamat"
        app:layout_constraintBottom_toBottomOf="@id/icon_alamat"
        app:layout_constraintStart_toEndOf="@id/icon_alamat"/>

    <View
        android:id="@+id/divider6"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/blackTransparent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/icon_alamat"
        app:layout_constraintStart_toStartOf="@id/email"
        app:layout_constraintEnd_toEndOf="@id/email"/>

    <!-- Document -->
    <ImageView
        android:id="@+id/icon_document"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/icon_document"
        android:contentDescription="@string/img_view_desc"
        app:layout_constraintTop_toBottomOf="@id/divider6"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/document"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dokumen"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/icon_document"
        app:layout_constraintBottom_toBottomOf="@id/icon_document"
        app:layout_constraintStart_toEndOf="@id/icon_document"/>

    <ImageView
        android:id="@+id/icon_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/icon_arrow"
        android:contentDescription="@string/img_view_desc"
        app:layout_constraintTop_toTopOf="@id/icon_document"
        app:layout_constraintBottom_toBottomOf="@id/icon_document"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider7"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/blackTransparent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/icon_document"
        app:layout_constraintStart_toStartOf="@id/email"
        app:layout_constraintEnd_toEndOf="@id/email"/>

    <View
        android:id="@+id/button_document"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/divider6"
        app:layout_constraintStart_toStartOf="@id/divider6"
        app:layout_constraintEnd_toEndOf="@id/divider6"
        app:layout_constraintBottom_toBottomOf="@id/divider7"/>

</androidx.constraintlayout.widget.ConstraintLayout>
